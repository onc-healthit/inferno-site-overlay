<!doctype html>
<html lang="en">
  <head>
    <title><%=app_name%></title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="<%=base_path%>/static/css/bootstrap.min.css">
    <link rel="stylesheet" href="<%=base_path%>/static/open-iconic/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="<%=base_path%>/static/css/styles.css?<%=version%>">
    <link rel="icon" href="<%=base_path%>/static/images/favicon.ico?<%=version%>" type="image/x-icon">
    <link rel="stylesheet" href="/site/site.css?<%=version%>">
  </head>
  <body>

  <header>
    <div class="site-header">
        <div  class="container">
          <a  class="site-logo" href="https://www.healthit.gov/" rel="external" title="HealthIT.gov">
            <img alt="HealthIT.gov" src="/site/healthit.gov.logo.png">
          </a>
        </div>
      </div>
      <!--template bindings={}-->
    </header>
    <div class="warning-header container">
        <!--<div style="font-size: 1.5rem;color:white;"> NOTE: This is a test instance with known bugs and gaps in functionality. </div>
        <div>  </div>
        -->
      <a href="https://github.com/siteadmin/inferno#installation-and-deployment">
        <div>This server is provided for demonstration purposes.</div>
        <div>Data is removed every Sunday at 12:01am ET.</div>
      </a>
    </div>
    <nav class="navbar navbar-expand navbar-light inferno-header" role="banner">
      <div class="container">
        <div class='inferno-branding'>
          <a class="navbar-brand" href="<%=base_path%>/">
            <img src='/images/inferno_logo.png' alt='Inferno Logo'>
          </a>
          <% if badge_text.kind_of? String and !badge_text&.empty? %>
            <span class='badge badge-dark'><%= badge_text %></span>
          <%end %>
        </div>
        <!-- Navbar content -->
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" target="_blank" href="https://github.com/siteadmin/inferno/">Documentation</a>
          </li>
        </ul>
      </div>
    </nav>
    <script type="text/javascript">
      if(/MSIE \d|Trident.*rv:/.test(navigator.userAgent))
        alert('Inferno does not currently support Internet Explorer.  Please switch to another browser, such as Chrome, Firefox, Safari, or Edge.');
    </script>

    <%= yield %>
    <footer class="footer">
      <div class="container row">
        <div class="col-sm text-left">
          <a target="_blank" href="https://github.com/siteadmin/inferno">Open Source</a>
        </div>
        <div class="col-sm text-center">
          <a target="_blank" href="https://github.com/siteadmin/inferno/issues">Issues</a>
        </div>
        <div class="col-sm text-right">
          Version <%= version %>
        </div>
      </div>
    </footer>

    <script>
       window.basePath = '<%= base_path %>';
    </script>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Tether.js, then Popper.js, then Bootstrap JS -->
    <script src="<%=base_path%>/static/js/jquery-3.2.1.min.js"></script>
    <script src="<%=base_path%>/static/js/tether.min.js"></script>
    <script src="<%=base_path%>/static/js/popper.min.js"></script>
    <script src="<%=base_path%>/static/js/bootstrap.min.js"></script>
    <script src="<%=base_path%>/static/js/app.js?<%=version%>"></script>

  </body>
</html>
